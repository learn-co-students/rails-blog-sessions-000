<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>
<h3>Comments:</h3>
  <% @post.comments.each do |comment| %>
    <h5>Posted by: <%= User.find_by(id: comment.user_id).name %></h5>
    <p><%= comment.content %> </p>
  <% end %>

  <% if user_signed_in? %>
    <h4>Post a new comment:</h4>
    <%= form_for [@post, Comment.new] do |f| %>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
        <%= f.hidden_field :post_id, :value => @post.id %>
        <%= f.hidden_field :user_id, :value => session["user_id"] %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  <% else %>
    <%= flash[:notice] = 'Log In to Comment!' %>
  <% end %>  

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
